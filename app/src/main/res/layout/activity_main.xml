<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context=".MainActivity">

<!--    Top 1/3rd-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        >
    </LinearLayout>


<!--    Bottom 3rd-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="5"
        >


            <LinearLayout
                style="@style/calculator_row"

                >

                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="AC"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="+/-"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="%"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_orange"
                    android:text="/"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/calculator_row"

                >

                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="7"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="8"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="9"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_orange"
                    android:text="X"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/calculator_row"

                >

                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="5"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="6"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_orange"
                    android:text="-"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/calculator_row"
                >

                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="1"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="2"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="3"
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_orange"
                    android:text="+"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/calculator_row"
                >

                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:layout_weight="2"
                    android:text="0"
                    />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_gray"
                    android:text="."
                    />
                <com.google.android.material.textview.MaterialTextView
                    style="@style/button_appearance_orange"
                    android:text="="
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>







